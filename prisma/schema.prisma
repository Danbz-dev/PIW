datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int        @id @default(autoincrement())
  email       String     @unique
  username    String     @unique
  password    String
  created_at  DateTime
  modified_at DateTime
  status      Boolean
  Comments    Comments[]
  Posts       Post[]
}

model Post {
  id       String     @id // id composed by: "user_id-(sum_of_posts_from_user)-today_date" 
  user_id  User       @relation(fields: [userId], references: [id])
  title    String
  likes    Int
  dislikes Int
  comments Comments[]
  userId   Int
}

model Comments {
  comm_id Int    @id @default(autoincrement())
  user_id User   @relation(fields: [userId], references: [id])
  post_id Post   @relation(fields: [postId], references: [id])
  text    String
  userId  Int
  postId  String
}
